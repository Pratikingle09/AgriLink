<%= stylesheet_link_tag "authentication" %>
<style>

</style>
<div class ="authorisation-container">
<div class ="register-container">
<h1>Create an account</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.text_field :username,placeholder: "Name",class:"input", autofocus: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true,placeholder: "Email",class:"input", autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.phone_field :mobile,placeholder: "Mobile" , value:"+91",class:"input" %>
  </div>


  <div class="field">
    <%= f.password_field :password,placeholder: "Password",class:"input", autocomplete: "new-password" %><br />
        <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,placeholder: "password_confirmation",class:"input", autocomplete: "new-password" %>
  </div>

    <div class="field">
<%= f.select :account_type, options_for_select(["Select Account Type", "student", "farmer", "seller"]), {} %>

  </div>
  <div class='check'>
<input type="checkbox" required>
  <p>By creating an account, I agree to our terms of use and privacy policy</p>
  </div>

  <div class="actions">
    <%= f.submit "Create Account" ,class:"submit",data: {turbo: false}%>
  </div>
<% end %>

<div class="islogin">
<p>Already have an account?</p>
<p>
<%= render "devise/shared/links" %>
</p>
</div>
  </div>

