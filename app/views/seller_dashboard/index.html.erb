
<h1 class="cart-head">Welcome to Your Seller Dashboard</h1>
<div class="seller-link">
<%= link_to 'Orders', seller_dashboard_orders_path,class:"link seller-prod" %>
</div>
<h1>Your Listed Products</h1>
<% if @products.any? %>
  <table id="customers">
    <thead>
      <tr>
        <th>Produvt Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.product_name %></td>
          <td><%= number_to_currency(product.price, unit: 'â‚¹', precision: 2) %></td>
          <td><%=  product.quantity %></td>
          <td style="display:flex; aline-items:center; justify-content:center">
            <%= link_to 'Edit', edit_product_path(product), class: 'cart-remove' %>&nbsp;|<%= button_to "Delete", product_path(product), method: :delete , class: 'cart-remove text' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No products listed yet.</p>
<% end %>
