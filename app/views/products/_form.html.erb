<style>
.checkout-btn{
  width:10rem;
  margin-left:10px;
}
</style>


<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form">
  <div>
    <%= form.label :product_name, style: "display: block",class:"label" %>
    <%= form.text_field :product_name,class:"input" %>
  </div>

  <div>
    <%= form.label :product_image, style: "display: block",class:"label" %>
    <%= form.file_field :product_image ,class:"input" %>
  </div>

  <div>
    <%= form.label :price, style: "display: block",class:"label" %>
    <%= form.text_field :price ,class:"input" %>
  </div>

  <div>
    <%= form.label :product_description, style: "display: block",class:"label" %>
    <%= form.text_area :product_description,class:"input descr" %>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block",class:"label" %>
    <%= form.number_field :quantity,class:"input" %>
  </div>

  <div>
    <%= form.submit class:"checkout-btn" %>
  </div>
  </div>
<% end %>
